# FanqieQimaoDownloader 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ========== API配置 ==========
# Rain API 密钥 (必填)
RAIN_API_KEY=YOUR_API_KEY_HERE
RAIN_API_BASE_URL=http://v3.rain.ink
API_TIMEOUT=30
API_RETRY_TIMES=3

# ========== 数据库配置 ==========
DATABASE_URL=sqlite:///./data/database.db

# ========== 存储配置 ==========
DATA_DIR=./data
BOOKS_DIR=./data/books
EPUBS_DIR=./data/epubs

# ========== 下载限制 ==========
# 每日字数限制 (默认: 2000万字)
DAILY_WORD_LIMIT=20000000
CONCURRENT_DOWNLOADS=3
DOWNLOAD_DELAY=1

# ========== Web服务配置 ==========
HOST=127.0.0.1
PORT=4568
# 生产环境请设为 false
DEBUG=false
RELOAD=false

# ========== 密码保护配置 ==========
# 应用访问密码 (留空或不设置则不启用密码保护)
APP_PASSWORD=
# Cookie签名密钥 (生产环境请修改为随机字符串)
SECRET_KEY=fanqie-qimao-downloader-secret-key-change-in-production
# 登录有效期 (小时, 默认: 168 = 7天)
SESSION_EXPIRE_HOURS=168

# ========== 日志配置 ==========
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
# 单个日志文件最大大小 (字节, 默认: 10MB)
LOG_MAX_SIZE=10485760
# 日志备份文件数量
LOG_BACKUP_COUNT=5

# ========== EPUB配置 ==========
EPUB_LANGUAGE=zh-CN
EPUB_PUBLISHER=FanqieQimaoDownloader
EPUB_COVER_WIDTH=600
EPUB_COVER_HEIGHT=800
