# ========== API配置 ==========
# Rain API V3 密钥 - 请替换为你自己的API Key
RAIN_API_KEY=YOUR_API_KEY_HERE
RAIN_API_BASE_URL=http://v3.rain.ink
API_TIMEOUT=30
API_RETRY_TIMES=3

# ========== 数据库配置 ==========
DATABASE_URL=sqlite:///./data/database.db

# ========== 存储配置 ==========
DATA_DIR=./data
BOOKS_DIR=./data/books
LOGS_DIR=./data/logs
CACHE_DIR=./data/cache

# ========== 下载配置 ==========
# 最大并发下载数
MAX_CONCURRENT_DOWNLOADS=5
# 下载延迟（秒）
DOWNLOAD_DELAY=1
# 是否自动重试失败章节
AUTO_RETRY_FAILED=true

# ========== 输出配置 ==========
# 默认输出格式：txt, epub
DEFAULT_OUTPUT_FORMAT=txt
# 章节合并模式：single（单文件）, multiple（分章节）
CHAPTER_MERGE_MODE=single
